<div class="top-row ps-3 navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">AppDIGESETT - Administrativo</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable">
    <nav class="flex-column">
        <!-- Gestión de Usuarios -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/modulo-administrativo/usuarios" Match="NavLinkMatch.All">
                <span class="bi bi-people"></span> Gestión de Usuarios
            </NavLink>
        </div>
        
        <!-- Reportes -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/modulo-administrativo/reportes" Match="NavLinkMatch.Prefix">
                <span class="bi bi-graph-up"></span> Reportes
            </NavLink>
        </div>

        <!-- Botón Salir -->
        <div class="nav-item px-3">
            <button class="btn btn-danger w-100 mt-2" @onclick="Logout">
                <span class="bi bi-box-arrow-left"></span> Salir
            </button>
        </div>
    </nav>
</div>

@code {
    [Inject] NavigationManager Nav { get; set; }

    private bool collapseNavMenu = true;
    public const string Login = "/";

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void Logout()
    {
        Nav.NavigateTo(Login);
    }
}
